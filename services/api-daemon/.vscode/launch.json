    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "api-daemon",
            "type": "Ruby",
            "request": "launch",
            // Current dir using env variable input in tasks.json
            "cwd": "${workspaceRoot}",
            // "preLaunchTask": "prep for launch",
            "program": "bin/rails",
            // Setup debug binding IP and port.
            "args": [
                "server",
                "-b",
                "0.0.0.0",
                "-p",
                "3000"
            ],
            "useBundler": true,
            "env": {
                "PATH": "/root/.yarn/bin:/root/.config/yarn/global/node_modules/.bin:/usr/local/bundle/bin:/usr/local/bundle/gems/bin:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin"
            }
        }
    ]
}
